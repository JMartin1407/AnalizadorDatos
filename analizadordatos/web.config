<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    <rewrite>
      <rules>
        <rule name="NextJS Routes" stopProcessing="true">
          <match url="^(?!_next|api|public|.*\.[^/]+$)(.*)" />
          <action type="Rewrite" url="/.next/static/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    <httpPlatform processPath="C:\home\python313\python.exe" arguments="run_server.py" startupTimeLimit="60" processesPerApplication="1">
      <environmentVariables>
        <environmentVariable name="PYTHONUNBUFFERED" value="true" />
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
